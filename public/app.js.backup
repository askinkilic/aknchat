function extractSuggestions(raw) {
  if (typeof raw !== 'string') return { text: '', suggestions: [] };
  const re = /<akn-suggestions>([\s\S]*?)<\/akn-suggestions>/i;
  const m = raw.match(re);
  let suggestions = [];
  if (m) {
    suggestions = m[1].split('||').map(s => s.trim()).filter(Boolean);
    raw = raw.replace(re, '').trim();
  }
  return { text: raw, suggestions };
}

